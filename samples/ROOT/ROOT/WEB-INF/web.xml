<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <display-name>Welcome to Prism</display-name>
  <description>Welcome to Prism</description>
  
  <servlet>
    <servlet-name>WebForwarder</servlet-name>
    <servlet-class>com.micromethod.sipmethod.sample.webroot.WebForwarder</servlet-class>
    
    <init-param>
      <param-name>8080</param-name>
      <param-value>http://www.voxeo.com</param-value>
    </init-param>
    
    <init-param>
      <param-name>8081</param-name>
      <param-value>/echo</param-value>
    </init-param>

    <load-on-startup>1</load-on-startup>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>WebForwarder</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
  
</web-app>