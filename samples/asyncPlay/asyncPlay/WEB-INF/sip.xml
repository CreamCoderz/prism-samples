<?xml version="1.0" encoding="UTF-8"?>
<sip-app>
  <app-name>A simple async play application</app-name>
  
  <servlet>
    <servlet-name>asyncPlay</servlet-name>
	<servlet-class>basic.AsyncPlayerServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>asyncPlay</servlet-name>
    <pattern>
	  <and>
	    <equal ignore-case="false">
          <var>request.method</var>
          <value>INVITE</value>
        </equal>
        <equal ignore-case="false">
          <var>request.to.uri.host</var>
          <value>asyncplay.sample.prism.voxeo.com</value>
        </equal>
      </and>
   </pattern>
  </servlet-mapping>

  <session-config>
	<session-timeout>-1</session-timeout>
  </session-config>

</sip-app>
